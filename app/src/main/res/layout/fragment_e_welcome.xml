<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/e_welcome_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_marginTop="4px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/e_welcome_ready"
        />

    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle_52_333333"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title2_layout"
        >
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/txt_layout"
        >
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_marginTop="50px"
        android:id="@+id/title3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle_44_FFFFFF"
        android:background="@drawable/e_welcome_time_bg"
        android:padding="10px"
        android:visibility="invisible"
        />

</com.zhy.autolayout.AutoLinearLayout>