<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        >

        <!--app:layout_auto_basewidth="height"，代表height上编写的像素值参考宽度。
            app:layout_auto_baseheight="width"，代表width上编写的像素值参考高度。-->
        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="550px"
            android:layout_height="550px"
            app:layout_auto_baseheight="width"
            android:background="@drawable/icon_header_bg"
            >

            <ImageView
                android:id="@+id/head_img"
                android:layout_width="462px"
                android:layout_height="462px"
                app:layout_auto_baseheight="width"
                android:layout_gravity="center"
                />

        </com.zhy.autolayout.AutoFrameLayout>



        <TextView
            android:layout_marginTop="70px"
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名：迪丽热巴.迪力木拉提"
            style="@style/TextStyle_44_FFFFFF"
            />
        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：女"
            style="@style/TextStyle_44_FFFFFF"
            />
        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准考证号：00812342"
            style="@style/TextStyle_44_FFFFFF"
            />
        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/grade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="级别：三级"
            style="@style/TextStyle_44_FFFFFF"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/control_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100px"
            >

            <ImageView
                android:id="@+id/sure_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sure_img"
                />

            <ImageView
                android:layout_marginLeft="20px"
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_cancel_img"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>