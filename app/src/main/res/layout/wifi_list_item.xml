<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/wifi_list_item_bg"
    android:id="@+id/root_layout"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginLeft="10px"
            android:id="@+id/wifi_connect_img"
            android:layout_width="20px"
            android:layout_height="30px"
            android:src="@drawable/icon_wifi_connect"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/ssid_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="WI-FI 信息"
            style="@style/TextStyle_44_FFFFFF"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="10px"
            />

        <ImageView
            android:id="@+id/wifi_state_img"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10px"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_marginRight="5px"
        android:layout_marginLeft="5px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#91CFF9"/>


</com.zhy.autolayout.AutoLinearLayout>